# Misc settings;

# seems to be the default;
# focus_follows_mouse yes
hide_edge_borders smart

# Run configuration commands;

exec --no-startup-id xrandr --dpi 200
exec --no-startup-id setxkbmap -option ctrl:nocaps
exec --no-startup-id exec ~/synced/i3/bin/cycle-background.py

########################################
# Launch daemons of various sorts;
########################################

# Gnome keyring daemon;
# exec --no-startup-id gnome-keyring-daemon

# Screensave / Locking / blanking;
exec --no-startup-id exec xscreensaver -no-splash
exec --no-startup-id exec xautolock -time 60 -locker ~/synced/i3/bin/i3lock-wrapper.sh

# bindsym $mod+Control+l exec xscreensaver -lock
bindsym $mod+Shift+Delete exec xautolock -locknow
bindsym $mod+Control+l exec xautolock -locknow
bindsym Mod1+Control+l exec xautolock -locknow
bindsym XF86Explorer exec xautolock -locknow

# Fun, but bad things happen if we keep the keyboard grabbed...
# bindsym $mod+Control+k exec xtrlock -f

# bluetooth;
exec --no-startup-id exec blueman-applet

# network manager;
exec --no-startup-id exec nm-applet

# dropbox;
exec --no-startup-id dropbox start

# syndaemon, keyboard disables touchpad clicks; cinnamon params
exec --no-startup-id exec syndaemon -i 1.0 -R

########################################
# Keyboard commands
########################################

### Control Buttons;

# volume control
bindsym XF86AudioLowerVolume exec /usr/bin/pactl set-sink-volume @DEFAULT_SINK@ '-5%'
bindsym XF86AudioRaiseVolume exec /usr/bin/pactl set-sink-volume @DEFAULT_SINK@ '+5%'
bindsym XF86AudioMute exec /usr/bin/pactl set-sink-mute @DEFAULT_SINK@ toggle

# brightness control
# bindsym XF86MonBrightnessDown exec xbacklight -steps 1 -time 0 -dec 5
# bindsym XF86MonBrightnessUp exec xbacklight -steps 1 -time 0 -inc 10
# bindsym XF86MonBrightnessDown exec ~/synced/i3/bin/adjust-brightness.sh -10
# bindsym XF86MonBrightnessUp exec ~/synced/i3/bin/adjust-brightness.sh 10
bindsym XF86MonBrightnessDown exec sudo /usr/local/bin/adjust-brightness.sh -10
bindsym XF86MonBrightnessUp exec sudo /usr/local/bin/adjust-brightness.sh 10

### Other Shortcuts;

# Exit without prompt;
bindsym $mod+Shift+e exec sh -c '[ $(echo "NO\nYES" | dmenu -sb "#ff6600" -i -p "Really exit i3 X session?") = "YES" ] && i3-msg exit'

# Scratchpad
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

# Bar display control
bindsym $mod+b bar mode dock
bindsym $mod+Shift+b bar mode hide
bindsym $mod+Shift+Control+b bar mode invisible

# Focus control
bindsym Mod1+Tab focus left

