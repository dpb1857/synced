
# dpb .profile additions;

USER=`whoami`
DIRS="/home/$USER/synced/bin"
for dir in $DIRS; do
    if [ -d $dir ]; then
	PATH=$dir:$PATH
    fi
done

# Allow /opt to override default path;
newpath=""
for dir in /opt/go /opt/hugo /opt/python3 /opt/python2 /opt/zoom; do
    if [ -d $dir/bin ]; then
        newpath="$newpath $dir/bin"
    elif [ -d $dir ]; then
        newpath="$newpath $dir"
    fi
done
PATH=`echo $newpath|sed 's/ /:/g'`:$PATH

if [ -d /opt/go ]; then
    export GOROOT=/opt/go
fi

# Setup go environment
export GOPATH=/space/goprojects
PATH=$PATH:$GOPATH/bin

export EDITOR=emacsclient
export ALTERNATE_EDITOR=mg
export FCEDIT=$EDITOR
export VISUAL=$EDITOR
export PAGER=less
